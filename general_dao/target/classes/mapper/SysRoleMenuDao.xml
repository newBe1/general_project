<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.SysRoleMenuDao">

    <resultMap type="com.example.entity.SysRoleMenu" id="SysRoleMenuMap">
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="menuId" column="menu_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysRoleMenuMap">
        select
          role_id, menu_id
        from ry.sys_role_menu
        where role_id = #{roleId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRoleMenuMap">
        select
          role_id, menu_id
        from ry.sys_role_menu
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysRoleMenuMap">
        select
          role_id, menu_id
        from ry.sys_role_menu
        <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="roleId" useGeneratedKeys="true">
        insert into ry.sys_role_menu()
        values ()
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update ry.sys_role_menu
        <set>
        </set>
        where role_id = #{roleId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from ry.sys_role_menu where role_id = #{roleId}
    </delete>

</mapper>